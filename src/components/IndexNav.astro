---
const navItems = [
	{
		title: 'Start',
		link: '#start',
	},
	{
		title: 'Highlights',
		link: '#highlights',
	},
	{
		title: 'Work',
		link: '#work',
	},
	{
		title: 'University Projects',
		link: '#projects',
	},
	{
		title: 'Writing',
		link: '#writing',
	},
];
---

<div class="nav-wrapper">
	<div class="nav">
		<ul>
			{
				navItems.map((item, index) => (
					<li>
						<a href={item.link}>
							<span>{item.title}</span>
						</a>
					</li>
				))
			}
		</ul>
	</div>
</div>

<script>
	const observerOptions = {
		root: null,
		rootMargin: '0px',
		threshold: 0.5,
	};

	const observerCallback = (entries) => {
		entries.forEach((entry) => {
			const navItem = document.querySelector(`a[href="#${entry.target.id}"]`);
			// console.log(entry); // Removed for production

			if (navItem) {
				if (entry.isIntersecting) {
					navItem.classList.add('active');
				} else {
					navItem.classList.remove('active');
				}
			}
		});
	};

	const observer = new IntersectionObserver(observerCallback, observerOptions);

	document.querySelectorAll('[id]').forEach((section) => {
		observer.observe(section);
	});
</script>

<style lang="scss">
	@use '../styles/vars.scss';
	/* Element | https://kaimagnus-portfolio-git-main-kaimagnusmuellers-projects.vercel.app/ */

	.nav-wrapper {
		display: flex;
		position: fixed;
		top: 50%;
		left: 0;
		justify-content: center;
		align-items: center;
		transform: translateY(-50%);
		width: clamp(1rem, 10vw, 10rem);
	}

	/* Element | https://kaimagnus-portfolio-git-main-kaimagnusmuellers-projects.vercel.app/ */

	.nav {
		border: 1px solid transparent;
	}

	ul {
		display: flex;
		position: relative;
		flex-direction: column;
		gap: 0.2rem;
		padding: 0;
		list-style: none;
	}

	/* In Webseite enthaltenes Stil-Dokument #2 | https://kaimagnus-portfolio-git-main-kaimagnusmuellers-projects.vercel.app/ */

	a {
		display: flex;
		position: relative;
		align-items: center;
		gap: 1rem;
		border-radius: 999px;
		width: 2.5rem;
		height: 1.5rem;

		&:hover {
			background: var(--bg-color-elev-1-hover);
		}

		&::before {
			display: inline-block;
			position: absolute;
			top: 0;
			left: 0;
			transform: scale(0.5);
			visibility: visible;
			opacity: 0;
			transition: 0.2s all ease-in-out;
			border-radius: 999px;
			background: var(--bg-color-elev-1-hover);
			width: 100%;
			height: 100%;
			content: ' ';
		}

		&:hover::before {
			transform: scale(1);
			visibility: visible;
			opacity: 1;
		}

		&::after {
			display: block;
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			opacity: 0.4;
			transition: 0.2s all ease-in-out;
			background: var(--text-color-low-contrast);
			width: 1rem;
			height: 2px;
			content: ' ';
		}

		& span {
			display: block;
			position: absolute;
			left: 100%;

			visibility: hidden;
			opacity: 0;
			z-index: 1;
			transition: 0.1s 0.05s all ease-in-out;
			margin-inline-start: 0.5rem;
			box-shadow: 0 4px 12px #0000000f;
			border: 1px solid var(--card-border-color);
			border-radius: 999pc;
			background: var(--bg-color-elev-0);
			padding: 0.5rem 1rem;
			min-width: max-content;
			line-height: 1;
		}

		&:hover span {
			transform: scale(1);
			visibility: visible;
			opacity: 1;
			transition-delay: 0;
			// margin-inline-start: 1.5rem;
		}
	}

	.active {
		&::after {
			opacity: 1;
			background: var(--text-color);
		}
	}

	@media (max-width: vars.$screen-md) {
		.nav-wrapper {
			display: none;
			top: 0;
			left: 50%;
			transform: translateX(-50%);
			z-index: 999;
			background: linear-gradient(180deg, var(--bg-color-elev-0) 40%, transparent);
			padding: 1rem 1rem 3rem;
			width: 100%;
		}

		ul {
			flex-direction: row;
		}

		a {
			width: 1.5rem;
			height: 2.5rem;

			&::after {
				width: 2px;
				height: 1rem;
			}

			& span {
				top: 100%;
				left: 50%;
				transform: scale(1) translateX(-50%);
				margin-inline-start: 0;
				margin-block-start: 0.5rem;
			}

			&:hover span {
				transform: scale(1) translateX(-50%);
			}
		}
	}
</style>
