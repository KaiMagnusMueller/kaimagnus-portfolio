---
export interface Props {
	classList?: string;
	src: string;
	alt: string;
}

const { classList = 'company-logo', src = '', alt = '' } = Astro.props;
---

<span><img {src} class={classList} {alt} /><slot /></span>

<style lang="scss">
	@use '../styles/vars.scss';

	img {
		margin-right: 0.375rem;
		margin-bottom: -0.375rem;
		background-color: var(--bg-color-elev-0);
		aspect-ratio: 1;
		width: 1.25em;
		object-fit: contain;

		@media (max-width: vars.$screen-sm) {
			margin-right: 0.375rem;
			margin-bottom: -0.375rem;
			width: 1.5em;
		}
	}

	span {
		// color: var(--text-color);
		text-wrap: nowrap;
	}

	.company-logo {
		border-radius: 4px;
		padding: 0.25rem;
	}
</style>
