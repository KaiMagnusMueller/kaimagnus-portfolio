---
export interface Props {
	classList?: string;
	src: string;
	alt: string;
}

const { classList = 'company-logo', src = '', alt = '' } = Astro.props;
---

<span><div><img {src} class={classList} {alt} /></div><slot /></span>

<style lang="scss">
	@use '../styles/vars.scss';

	img {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		background-color: var(--bg-color-elev-0);
		aspect-ratio: 1;
		height: 1.25em;
		object-fit: contain;

		@media (max-width: vars.$screen-sm) {
			height: 1.5em;
		}
	}

	div {
		display: inline-block;
		position: relative;
		margin-bottom: -0.2lh;
		margin-inline-end: 0.125em;
		aspect-ratio: 1;
		height: 1lh;
		@media (max-width: vars.$screen-sm) {
			margin-inline-end: 0.25em;
		}
	}

	span {
		// color: var(--text-color);
		text-wrap: nowrap;
	}

	.company-logo {
		border-radius: 4px;
		padding: 0.25rem;
	}
</style>
