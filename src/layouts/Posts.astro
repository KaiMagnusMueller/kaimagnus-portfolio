---
import Layout from './Layout.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
	<nav class="color-text-low-contrast">
		<ul class="list--horizontal">
			<li><a href="/">Home</a></li>
		</ul>
	</nav>
	<article class="post-content">
		<slot />
	</article>
</Layout>
<style lang="scss" is:global>
	@import '../styles/_vars.scss';

	nav {
		grid-column: 1/-1;
		margin: 1rem 0 2rem;
		display: flex;
		gap: 2rem;

		a {
			text-decoration: none;
		}
	}

	figure {
		width: 100%;
	}

	.post-content {
		grid-column: 1 / -1;
		width: 100%;
		margin-top: 4rem;
		word-break: break-word;

		h1 {
			font-weight: 600;
			font-size: 2rem;
		}

		// fix first figure having a too large margin-top
		h1 + figure {
			margin-top: 0;
		}

		h2,
		h3,
		h4,
		h5 {
			font-weight: 400;
			margin: 0;
		}

		// Currently all elements that should be full size are also divs, so this is easy.
		& > *:not(div, .full-width) {
			width: 50%;
			margin-left: 0;
			margin-right: auto;
			line-height: normal;
		}

		p {
			font-size: 1.125em;
			margin-top: 0.35em;
			margin-bottom: 1em;
		}

		img {
		}

		a {
			color: var(--color-link);

			&:visited {
				color: var(--color-link-visited);
			}
		}
	}

	@media (max-width: $screen-lg) {
		.post-content {
			& > *:not(div, .full-width) {
				width: 100%;
			}
		}
	}

	.heading-wrapper {
		margin-top: 2em;
		margin-bottom: 0.25em;
		display: flex;
		flex-direction: row;
		align-items: baseline;
		gap: 12px;

		a,
		a:visited {
			color: var(--color-text-low-contrast);
		}
	}

	.heading-wrapper:hover .anchor-link {
		visibility: visible;
		opacity: 1;
	}

	.anchor-link {
		width: 20px;
		height: 20px;
		transition: opacity 0.2s ease;
	}

	@media (hover: hover) {
		.heading-wrapper {
			a,
			a:visited {
				color: var(--color-text);
			}
		}
		.anchor-link {
			visibility: hidden;
			opacity: 0;
		}
	}

	@media (max-width: $screen-md) {
		nav {
			margin: 1rem 0 1rem;
		}

		.post-content {
			margin-top: 2rem;

			h2,
			h3,
			h4,
			h5 {
				margin-top: 1.5em;
			}

			p {
				font-size: revert;
			}
		}
	}
</style>
