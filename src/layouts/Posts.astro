---
import Layout from './Layout.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
	<nav class="color-text-low-contrast">
		<ul class="list--horizontal">
			<li><a href="/">Home</a></li>
		</ul>
	</nav>
	<article class="post-content">
		<slot />
	</article>
</Layout>
<style lang="scss" is:global>
	@import '../styles/_vars.scss';

	nav {
		grid-column: 1/-1;
		margin: 1rem 0 2rem;
		display: flex;
		gap: 2rem;
	}

	figure {
		// position: absolute;
		width: 100%;
		// left: 0;
		// margin: 0;
	}

	.post-content {
		grid-column: 1 / -1;
		width: 100%;
		margin-top: 2rem;

		h1 {
			font-size: 38px;
		}

		h2,
		h3,
		h4,
		h5 {
			font-weight: 400;
			margin-top: 2em;
			margin-bottom: 0.25em;
		}

		h1,
		h2,
		h3,
		h4,
		h5,
		p {
			width: 50%;
			margin-left: 0;
			margin-right: auto;
			line-height: normal;
		}

		p {
			font-size: 1.125em;
			margin-top: 0.35em;
			margin-bottom: 1em;
		}

		img {
		}
	}

	@media (max-width: $screen-lg) {
		.post-content {
			h1,
			h2,
			h3,
			h4,
			h5,
			p {
				width: 100%;
			}
		}
	}

	@media (max-width: $screen-md) {
		nav {
			margin: 1rem 0 1rem;
		}

		.post-content {
			margin-top: 1rem;

			h2,
			h3,
			h4,
			h5 {
				margin-top: 1em;
			}

			p {
				font-size: revert;
			}
		}
	}
</style>
