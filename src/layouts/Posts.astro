---
import Layout from './Layout.astro';
import PageContentNav from '@components/PageContentNav.astro';
import type { MarkdownHeading } from 'astro';

export interface Props {
	entryCollection: string;
	headings: MarkdownHeading[];
	[key: string]: any;
}

const { entryCollection, headings, ...props } = Astro.props;
---

<Layout pageTitle={props.title} pageDescr={props.description} ogImage={props.ogImage} {...props}>
	<nav class="color-text-low-contrast">
		<a href="/">Home</a> /
		{entryCollection !== undefined && <a href={`/${entryCollection}`}>{entryCollection}</a>}
	</nav>
	<article class="post-content">
		<PageContentNav {headings} />
		<slot />
	</article>
</Layout>

<style lang="css">
	nav {
		display: flex;
		gap: 1rem;
		margin: 2rem 0 0;

		a,
		span {
			text-transform: capitalize;
		}

		@media (max-width: 768px) {
			margin: 1rem 0 0;
		}
	}
</style>

<style lang="css" is:global>
	.post-content {
		width: 100%;
		hyphens: auto;
		word-break: break-word;

		header {
			/* margin-block-end: -3.5rem; */
			/* min-height: 100vh; */
			margin-block: 8rem 3rem;
		}

		@media (max-width: 768px) {
			header {
				margin-block: 4rem 2rem;
			}
		}

		.header-inner-wrapper {
			display: flex;
			flex-direction: column;
			flex-wrap: wrap;
			justify-content: center;
			gap: 1rem 1rem;
			/* transform: translateY(-50%); */
		}

		h1 {
			margin-block: 0;
		}

		h2,
		h3,
		h4,
		h5 {
			width: fit-content;
			font-weight: 600;
		}

		/* part of the articles and project pages */
		.course-data {
			display: inherit;
			flex-wrap: inherit;
			gap: inherit;
			line-height: 1;
		}

		& > *,
		figcaption {
			max-width: 34rem;
		}

		div,
		.full-width-reset,
		header,
		iframe {
			max-width: unset;
		}

		p {
			margin-top: 0.35em;
			margin-bottom: 1em;
		}

		iframe,
		.main-content img,
		.main-content video {
			position: relative;
			outline: 1px solid var(--border-color-transparent);
			outline-offset: -1px;
			/* box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1); */
			border-radius: 4px;
			overflow: clip;
		}

		.background {
			position: absolute;
			top: calc(-1 * var(--overflow));
			left: calc(-1 * var(--overflow));
			transform: scale(1);
			opacity: 0.25;
			z-index: -1;
			-webkit-backdrop-filter: blur(32px);
			filter: blur(32px);
			border-radius: 4rem;
			aspect-ratio: 1;
			width: calc(100% + var(--overflow) * 2);
			height: calc(100% + var(--overflow) * 2);
			--overflow: 30px;
			overflow: hidden;
			pointer-events: none;

			img,
			picture {
				width: 100%;
				height: 100%;
			}

			@media (max-width: 768px) {
				display: none;
			}

			@media (prefers-color-scheme: dark) {
				opacity: 0.16;
			}
		}

		a {
			color: var(--link-color);

			&:visited {
				color: var(--link-color-visited);
			}
		}

		& > ul,
		& > ol {
			margin-block: 1rem;
		}

		.footnotes {
			margin-top: 4rem;
			border-top: 1px solid var(--border-color-transparent);
			padding-top: 1rem;
		}
	}

	@media (max-width: 768px) {
		.post-content {
			& > *,
			figcaption {
				max-width: unset;
			}
		}

		.footnotes {
			.heading-wrapper {
				display: none;
			}
		}

		.course-data {
			font-size: 1rem;
		}
	}

	h1,
	h2,
	h3,
	h4 {
		margin-top: 2.25rem;
		margin-bottom: 0.75rem;
	}

	.heading-wrapper {
		display: inline-flex;
		align-items: baseline;
		gap: 0.5em;
	}

	.anchor-link {
		transition: opacity 0.2s ease;
		width: 20px;
		height: 20px;

		@media (hover: hover) {
			visibility: hidden;
			opacity: 0;
		}
	}

	.heading-wrapper:hover .anchor-link {
		visibility: visible;
		opacity: 1;
	}
</style>
